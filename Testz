local SC = game.PlaceId == 13642296453

if SC then
    -- Carregar OrionLib
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

    -- Janela principal
    local Window = OrionLib:MakeWindow({Name = "Tester Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "Pedro2."})

    _G.teleport  = false

    local function teleport(island)
        local Char = game.Players.LocalPlayer.Character
        local HumanoidRootPart = Char:WaitForChild("HumanoidRootPart")

        local islandCoordinates = {
            ["Starter Island"] = CFrame.new(10, 10, 10),
            ["Space Island"] = CFrame.new(-636.831299, -152.839294, -3039.64209),
            ["Raid Portals"] = CFrame.new(),
            -- Adicione as coordenadas para outras ilhas conforme necessário
        }

        if islandCoordinates[island] then
            HumanoidRootPart.CFrame = islandCoordinates[island]
            print("Jogador teleportado para", island)
        else
            warn("Coordenadas não definidas para", island)
        end
    end

    local function TeleportButtonCallback() 
        local selectedIsland = Tab:GetDropdown("Dropdown")
        teleport(selectedIsland)
    end

    local Tab = Window:MakeTab({
        Name = "Tab 1",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    local Section = Tab:AddSection({
        Name = "Section"
    })

    Tab:AddButton({
        Name = "Button!",
        Callback = TeleportButtonCallback
    })

    Tab:AddDropdown({
        Name = "Dropdown",
        Default = "Starter Island",
        Options = {
            "Starter Island",
            "Space Island",
            "Raid Portals",
            "Ocean Island",
            "Nuclear Island",
            "Jungle Island",
            "High Heavens Island",
            "Heaven Island",
            "Enchanted Woods",
            "Chests",
            "Cave"
        },
        Callback = function(Value)
            print("Selected Island:", Value)
            teleport(Value)
        end    
    })
end
